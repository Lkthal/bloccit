<h1>New Ad </h1>
<div class="row">
<div class="col-md-8">
  <%= form_for @advertisement do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', placeholder: "Enter a Ad title" %>
  </div>

  <div class="form-group">
    <%= f.label :copy %>
    <%= f.text_area :copy, class: 'form-control', placeholder: "Enter a Ad body" %>
  </div>
  <div class="form-group">
    <%= f.label :copy %>
    <%= f.number_field :price, class: 'form-control', placeholder: "$amount" %>
  </div>
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
  <%end%>
  </div>
</div>
